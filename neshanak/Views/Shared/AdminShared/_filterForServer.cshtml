            {
                if (myitem.filterdetailes != null)
                {
                    string ID = myitem.ID;

                    string filterdetaillist = "DF" + ID;
                    if (myitem.filterkinde == "1")
                    {
                        <div id="filtersholder" class="form-group  selectedfilterServer" style="">
