                                        $(document).ready(function () {
                                            var ID = "@myitem.ID";
                                            var filterdetaillist = "DEFfilterdetaillist" + ID;
                                            var filterVALUE = $("#" + filterdetaillist + " option:selected").val();
                                            //$("#allfilterid").append(ID + "-" + filterVALUE + ",");
                                            $('select#' + filterdetaillist).on('change', function () {
