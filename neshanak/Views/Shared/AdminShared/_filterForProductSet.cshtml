                        $('input.rangeInput').each(function () {
                            let id = $(this).attr("id");

                            let ID = (id + "").replace("R", "");
                            if ($(this).val() !== null) {
                                let value = "";
                                value = value + (ID + "-" + $(this).val() + ";");

                                $("#inputallrangeid").val(value)
                            }
                        })
                        $("#productcolor option").each(function () {
                            if ($(this).val() != '') {
                                $(this).css('background-color', $(this).val());

                            }
                        });
                    });


                </script>



