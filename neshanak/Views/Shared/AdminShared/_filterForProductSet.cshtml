                    رنگ :
                </label>

                <div>
                    @{
                        <select id=productcolor name=productcolor onchange="Getcolorlist(this)" style="width:100%" class="" multiple>
                            @foreach (var color in Model.Colores)
                            {
                                <option value=@color.Value> @color.Text    </option>
                            }
