@model neshanak.viewModel.IndexVM

@{
    if (Model.cat != null)
    {
        @Html.DropDownList("subcatid", new SelectList(Model.cat, "ID", "title"), Resources.res.choossubcat, new { @class = "form-control", id = "subcat" })

    }
    else
    {
        List<neshanak.viewModel.Cat> lst = new List<neshanak.viewModel.Cat>();
        @Html.DropDownList("subcatid", new SelectList(lst, "ID", "title"), Resources.res.choossubcat, new { @class = "form-control", id = "subcat", @disabled = "disabled" })

    }
}

<script>
    $("#subcat").change(function () {
      
        getSubcatTree($(this).val(), "2")
    })
</script>
