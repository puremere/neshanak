@model neshanak.viewModel.lanVM
@{
    ViewBag.Title = "GetSubCat";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles{


    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/fontawesome-all.css" rel="stylesheet" />

    <link href="~/Content/slick.css" rel="stylesheet" />
    <link href="~/Content/slick-theme.css" rel="stylesheet" />
    <style>
        .forumitem {
            padding: 5px;
            
        }

            .forumitem .divchild {
                padding: 35px;
                border: 1px solid #ddd;
                border-radius: 8px;
                background-color: #2e0437;
                color: white;
                text-align: center
            }

        .divchild a {
            color: white
        }
        @@media screen and (max-width: 750px) {
            .forumitem .divchild {
                padding: 10px 15px;
            }
        }
    </style>
}
@section scripts{
    <script src="~/Scripts/jquery.migrate.js"></script>
    <script src="~/Scripts/slick.js"></script>

    <script>
        $(document).ready(function () {
            $('.your-class').slick({
                dots: false,
                infinite: true,
                autoplay: true,
                speed: 500,
                cssEase: 'linear'
            });
        });
    </script>






    <link href="~/Content/slider.css" rel="stylesheet" />
    <script src="~/Scripts/sliderscript.js"></script>
    <script>
        $('.bo-slider').boSlider({
            slideShow: true,
            interval: 8000
        });
    </script>

}





@if (Model.sld != null)
{
    <ul class="bo-slider">
        @foreach (var slid in Model.sld)
        {
            if (slid.type == "1")
            {
                <li data-url="@slid.image" data-type="image"></li>
            }
            else
            {
                string videopath = "/video/" + @Path.GetFileNameWithoutExtension(slid.image) + ".mp4";
                <li data-url="@videopath" data-type="video"></li>
            }
        }


    </ul>

}

@if (Model.forum != null)
{
    <div class="row" style="margin:15px">
        @foreach (var item in Model.forum)
        {
            <div class="final forumitem col-lg-2 col-sm-4 col-md-6">
                <div class="divchild">
                    <a style="text-decoration:none" href="/home/forum?gr=@item.url">
                        @Resources.res.forum @item.title
                    </a>
                </div>
            </div>
        }
    </div>
}

