                <div class="rowholder">
                    <label class="mainlabla">
                        <input id="forgettext" class="c-ui-input__field" type="text" name="remember[email_phone]" placeholder=" @Resources.res.loginEmail">
                        <div class="registererror"><p>@Resources.res.loginEmailError</p></div>
