
@model neshanak.viewModel.BzListVM
@{
    ViewBag.Title = "searchResult";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{


    <link href="~/Content/indexStyle.css" rel="stylesheet" />
    <link href="~/Extra/leaflet/leaflet.css" rel="stylesheet" />


    <link href="~/Content/slick.css" rel="stylesheet" />
    <link href="~/Content/slick-theme.css" rel="stylesheet" />

}
@section scripts{
    <script>
        if ('@Session["lang"]' == 'fa') {
            $("body").get(0).style.setProperty("--align", "right");
            $("body").get(0).style.setProperty("--direction", "rtl");

        }
        else {
            $("body").get(0).style.setProperty("--align", "left");
            $("body").get(0).style.setProperty("--direction", "ltr");

        }

    </script>
    <script>
        width = screen.width;
        var height = $(window).height();
        var percent = "65%";
        if (width < 750) {
            height = $(window).height() / 2;
           percent = "105%";
        }
        

        $("#mapid").height(height + "px");
        $("#contentHolder").height(height + "px");

        $("#mapid").width(percent);
        var goToDetail = function (el) {
            var id = el.id
            id = id.replace("E", "");
            window.location.href = "/Home//itemDetail?id=" + id
        }

    </script>
    <style>
        .dataHolder {
            display: flex;
            align-items: center;
            height: 100%
        }
        @@media screen and (max-width: 750px) {
            .dataHolder {
                display: block;
               
            }
        }
    </style>

    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"
            integrity="sha512-XQoYMqMTK8LvdxXYG3nZ448hOEQiglfqkJs1NOQV44cWnUrBc8PkAOcXy20w0vlaXaVUearIOBhiXZ5V3ynxwA=="
            crossorigin="">

    </script>
    <script>
        var markers = {};
        var ITEMES = @Html.Raw(Json.Encode(Model.bzlist));

        var mymap = L.map('mapid', { attributionControl: false}).setView([51.505, -0.09], 13);
        L.tileLayer('https://api.mapbox.com/styles/v1/{id}/tiles/{z}/{x}/{y}?access_token={accessToken}', {
            attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors, Imagery © <a href="https://www.mapbox.com/">Mapbox</a>',
            maxZoom: 18,
            id: 'mapbox/streets-v11',
            tileSize: 512,
            zoomOffset: -1,
            accessToken: 'pk.eyJ1IjoibWVyaW9saSIsImEiOiJja2p6dXhmdngwYmVvMnZwY2lyc2htNGxhIn0.Y9t__Bll6Fw9b9amb_rcHg',

        }).addTo(mymap);
        if (ITEMES != null) {
            var first = ITEMES[0];
            mymap.panTo(new L.LatLng(first.lat, first.lng));
        }


        var LeafIcon = L.Icon.extend({
            options: {
                shadowUrl: '/images/marker-shadow.png',
                iconSize: [25, 41],
                iconAnchor: [12, 41],
                popupAnchor: [1, -34],
                shadowSize: [41, 41]
            }
        });
        var greenIcon = new LeafIcon({ iconUrl: '/images/marker-green.png' });

        var marker;
        $.each(ITEMES, function (index, item) {
            //alert(JSON.stringify(item));
            var popuphtml = `<div class="leaflet-popup-content" style="width: px;display: flex;"><img style="width: 100px;height:100px;display: inline-block;" src="`+item.img+`"><div style="display: inline-block;margin: 5px;flex: 1;"><h4 style="color: black;">`+item.title+`</h4><p style=" text-align: center;">`+item.address+`</p></div></div>`;
            if (index === 0) {
                var mr = L.marker([item.lat, item.lng]).addTo(mymap).on('click', onClick);
                mr.bindPopup(popuphtml);
                mr.on('mouseover', function (e) {
                    this.openPopup();
                });
                mr.on('mouseout', function (e) {
                    this.closePopup();
                });
                markers[item.id] = mr;


                marker = L.marker([item.lat, item.lng], { icon: greenIcon });
                marker.bindPopup(popuphtml);
                marker.on('mouseover', function (e) {
                    this.openPopup();
                });
                marker.on('mouseout', function (e) {
                    this.closePopup();
                });
                marker.addTo(mymap).on('click', onClick);
            }
            else {
                var mr = L.marker([item.lat, item.lng]).addTo(mymap).on('click', onClick);
                mr.bindPopup(popuphtml);
                mr.on('mouseover', function (e) {
                    this.openPopup();
                });
                mr.on('mouseout', function (e) {
                    this.closePopup();
                });
                markers[item.id] = mr;
            }


        });
        function onClick(e) {

            mymap.removeLayer(marker); // حذف مارکر فوکوس قبلی
            mymap.panTo(e.target.getLatLng());


            marker = L.marker(e.target.getLatLng(), { icon: greenIcon });
            marker.addTo(mymap).on('click', onClick);

            var id = "";

            $.each(ITEMES, function (index, item) {

                var string = e.target.getLatLng().toString();
                var srt = string.substring(string.indexOf("(") + 1, string.indexOf(","));
                if (item.lat.includes(srt) || srt.includes(item.lat)) {
                    $(".itemHolder").css('background-color', '#E2E2E2');
                    $(".itemHolder").parent().find('h4').css("color", "#4d4d4d");
                    $(".itemHolder").parent().find('h5').css("color", "#4d4d4d");


                    $("#" + item.id).parent().css('background-color', '#8e8e8e');
                    $("#" + item.id).parent().find('h4').css("color", "#eee");
                    $("#" + item.id).parent().find('h5').css("color", "#eee");


                    $('#contentHolder').animate({
                        scrollTop: $("#" + item.id).offset().top
                    }, 500);
                }


            });





        }

        var covermousein = function (el) {
            var object = jQuery(el);
            object.parent().css("background-color", "#8e8e8e")
            object.parent().find('h4').css("color", "#eee");
            object.parent().find('h5').css("color", "#eee");

            var id = object.attr('id');
            markers[id].openPopup();
        }
        var covermouseout = function (el) {
            var object = jQuery(el);
            object.parent().css("background-color", "#fdfdfd")
            object.parent().find('h4').css("color", "#4d4d4d");
            object.parent().find('h5').css("color", "#4d4d4d");
            var id = object.attr('id');
            markers[id].closePopup();
        }
        $("#moreProducts").click(function () {

            $.ajax({
                url: "/home/setPage",
                dataType: "html",
                success: function () {
                    $.ajax({
                        url: "/home/searchResult",
                        dataType: "html",
                        data: {
                            fromForm: "1"
                        },
                        success: function (data) {



                            var ITEMES0 = JSON.parse(data);
                            
                            $.each(ITEMES0.bzlist, function (index, item) {
                            
                                var popuphtml = `<div class="leaflet-popup-content" style="width: px;display: flex;"><img style="width: 100px;height:100px;display: inline-block;" src="` + item.img + `"><div style="display: inline-block;margin: 5px;flex: 1;"><h4 style="color: black;">` + item.title + `</h4><p style=" text-align: center;">` + item.address + `</p></div></div>`;
                               
                                var mr = L.marker([item.lat, item.lng]).addTo(mymap).on('click', onClick);
                                mr.bindPopup(popuphtml);
                                mr.on('mouseover', function (e) {
                                    this.openPopup();
                                });
                                mr.on('mouseout', function (e) {
                                    this.closePopup();
                                });
                                marker.addTo(mymap).on('click', onClick);
                                markers[item.id] = mr;

                                var id = "E" + item.id;
                                var newhtml = ' <div   onclick="goToDetail(this)" class="itemHolder" id="' + id + '" style="background-color:#fdfdfd"> <div class="cover"  onmouseover="covermousein(this)"  onmouseout ="covermouseout(this)"  id="' + item.id + '"></div> <div class="DATA"> <h4 style="">' + item.title + '</h4>    <h5>' + item.desc + '</h5> <h5>' + item.address + '</h5> </div>  <img src="' + item.img + '" /> </div>'
                                $(".itemHolderParent").append(newhtml);

                                //if (item != null) {
                                //    alert(JSON.stringify(item));
                                //}


                            });

                        }

                    })
                }

            })
        })
        //$(".cover").click(function () {
        //    alert("ss");
        //})

    </script>
    <script src="~/Scripts/jquery.migrate.js"></script>
    <script src="~/Scripts/slick.js"></script>
    <script>
        $(document).ready(function () {
            $('.your-class').slick({
                dots: false,
                infinite: true,
                autoplay: true,
                speed: 500,
                cssEase: 'linear',
                prevArrow: false,
                nextArrow: false
            });
        });
    </script>
    <script>

        $("#addnew").click(function () {
            window.location.href = "/Home/createItem"
        })
    </script>
    <link href="~/Content/slider.css" rel="stylesheet" />
    <script src="~/Scripts/sliderscript.js"></script>
    <script>
        $('.bo-slider').boSlider({
            slideShow: true,
            interval: 8000
        });
    </script>

    <script>
        
    </script>

}

@if (Model.sld != null)
{
    <ul class="bo-slider">

        @foreach (var slid in Model.sld)
        {
            if (slid.type == "1")
            {
                <li data-url="@slid.image" data-type="image"></li>
            }
            else
            {
                string videopath = "/video/" + @Path.GetFileNameWithoutExtension(slid.image) + ".mp4";
                <li data-url="@videopath" data-type="video"></li>
            }
        }

        @*<li data-url="/images/banner5.jpg" data-type="image"></li>
            <li data-url="/images/banner6.jpg" data-type="image"></li>
            <li data-url="/video/sm.mp4" data-type="video">
            <li data-url="/images/banner2.jpg" data-type="image"></li>*@
    </ul>

}




<div class="dataHolder" style="">
    <div id="mapid" style=""></div>
    <div id="contentHolder" style="text-align:center">

        @if (Model.bzlist != null)
        {
            <div class="itemHolderParent" style="margin-bottom:30px">

                @{
                    foreach (var item in Model.bzlist)
                    {
                        var id = "E" + item.id;
                        <div onclick="goToDetail(this)" class="itemHolder" id="@id" style="background-color:#fdfdfd">
                            <div class="cover" onmouseover="covermousein(this)" onmouseout="covermouseout(this)" id="@item.id"></div>
                            <div class="DATA">
                                <h4 style="">@item.title</h4>
                                <h5>@item.desc</h5>
                                <h5>@item.address</h5>
                            </div>
                            <img src="@item.img" />


                        </div>
                    }
                }

            </div>
            
            <div  style="  position:relative; bottom:20px; width:100%; background-color: rgba(0,0,0,0.5) ">
                <div class="btn btn-success" id="moreProducts" style="margin:10px; padding: 10px 45px; cursor:pointer; text-align :center;  font-size:16px">@Resources.res.more</div>
            </div>
        }
        else
        {
            <div style="width:100%; text-align:center;padding: 50px;font-size: 20px;">@Resources.res.noItemFound</div>
        }
    </div>
</div>


