        <div class="d-flex h-100 text-center align-items-center">
            <div class="w-100 text-white">
                <h1 style="margin-top:100px; color:white">@Resources.res.headertext1</h1>
                <h2 style=" color:white">@Resources.res.headertext2</h2>
                <div class="formsection">
                    <input class="form-control" placeholder="@Resources.res.headerFormInput1" />
                    @Html.DropDownList("SelectedItem", new SelectList(Model.lands, "ID", "title"), @Resources.res.headerFormInput3, new { @class = "form-control", id = "cityDropDown" })
                    <input class="form-control" placeholder="@Resources.res.headerFormInput4" />
                    <div class="searchButton">@Resources.res.headerFormInput2</div>
                </div>
                <div class="menuSection">
                    @foreach (var item in Model.cat)
                    {

                        string ID = item.id.ToString();
                        int index = Model.cat.IndexOf(item);
                        string imageName = "lawyers_icon.png"; // Path.GetFileNameWithoutExtension(item.img) + "_icon.png";
                        if (index < 6)
                        {
                            <div class="item  ITEMCAT" id=@ID style=" ">
                                <span><img style="" src="http://supectco.com/neshanak/portal/uploads/@imageName" /></span>
                                <span style="font-weight:600">@item.title</span>
                            </div>
                        }



                    }

                    <div class="item  ITEMCAT" style=" ">
                        <span><img style="" src="http://supectco.com/neshanak/portal/uploads/lawyers_icon.png" /></span>
                        <span style="font-weight:600">@Resources.res.more</span>
                    </div>


                </div>
            </div>
        </div>
