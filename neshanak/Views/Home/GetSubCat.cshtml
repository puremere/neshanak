                    <div>
                        <div class="itemimageHolder">
                            <img style="cursor:pointer; max-width:100%; max-height:100%;object-fit:scale-down" class="subcatimage" src="@item.img" />
                        </div>

                        <p>@item.title</p>
                    </div>

                </div>

            }
            else
            {
                <div class="subcat catitem" id="@item.id-@item.catLevel">
                    <div>
