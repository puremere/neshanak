            }

        .fieldholder {
            /*width: 30%;
            display: inline-block;*/
            padding: 15px;
        }

        .REM {
            border-radius: 5px;
        }
    </style>
    <script src="~/Scripts/tinymce/tinymce.min.js"></script>
    <script>
        tinymce.init({
            selector: 'textarea',
            height: 500,
            menubar: false,
            plugins: [
                'advlist autolink lists link image charmap print preview anchor',
